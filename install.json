{
  "run": [
    {
      "method": "shell.run",
      "params": {
        "message": "git clone https://github.com/mv-lab/InstructIR.git"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "message": "{{os.platform() === 'win32' ? 'python' : 'python3'}} -m venv env",
        "path": "instructir"
      }
    },
    {
      "method": "shell.start",
      "params": {
        "path": "instructir",
        "env": {
          "HF_HOME": "../huggingface"
        }
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "{{os.platform() === 'win32' ? 'env\\\\Scripts\\\\activate env' : 'source env/bin/activate env'}}",
        "on": [
          {
            "event": null,
            "return": true
          }
        ]
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "pip install -r requirements.txt",
        "on": [
          {
            "event": null,
            "return": true
          }
        ]
      }
    },
    {
      "method": "input",
      "params": {
        "title": "Install Success",
        "description": "Go back to the dashboard and launch the app!"
      }
    },
    {
      "method": "browser.open",
      "params": {
        "uri": "/?selected=instructir"
      }
    }
  ]
}
